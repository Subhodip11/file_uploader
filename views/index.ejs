<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    
    header {
        text-align: center;
    }
    
    .card {
        height: auto;
        width: auto;
        margin: 4rem 4rem;
    }
    
    .image {
        height: 16rem;
        width: 15rem;
        border: 1px solid black;
    }
    
    .image img {
        width: 100%;
        height: 100%;
    }
    
    .show-cards {
        /* border: 1px solid black; */
        padding: 0 3rem;
        height: 100%;
        width: 100%;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
    }
    
    .btn {
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0.5rem 0;
    }
    
    .delbtn {
        border-radius: 0.3rem;
        padding: 0.4rem 2rem;
        outline: none;
        background-color: red;
        color: white;
        border: none;
    }
</style>

<body>
    <div class="container">
        <header>
            <h1>UPLOADED FILES</h1>
        </header>
        <div class="show-cards">
            <%  url.forEach(ele=>{ %>
                <div class="card">
                    <div class="image">
                        <img src="<%= ele.imageURL %>" alt="<%= ele.imageURL %>">
                    </div>
                    <div class="btn">
                        <form action="/uploadSingleDelete<%= ele['id'] %>?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="delbtn">Delete</button>
                        </form>
                    </div>
                </div>


                <% }) %>


        </div>
    </div>
</body>

</html>